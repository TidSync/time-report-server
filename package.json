{
  "name": "server-node-template",
  "version": "1.0.0",
  "description": "Node template that contains Express, Typescript, PostgresSQL",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc ",
    "prestart": "npm run build",
    "start": "NODE_ENV=dev NODE_PATH=./src nodemon",
    "migration:create:dev": "npx dotenv -e .env.dev -- npx prisma migrate dev --create-only && npx prisma generate",
    "migrate:dev": "npx dotenv -e .env.dev -- npx prisma migrate dev",
    "migrate:deploy:dev": "npx dotenv -e .env.dev -- npx prisma migrate deploy",
    "migration:create:prod": "npx dotenv -e .env.prod -- npx prisma migrate dev --create-only && npx prisma generate",
    "migrate:prod": "npx dotenv -e .env.prod -- npx prisma migrate dev",
    "migrate:deploy:prod": "npx dotenv -e .env.prod -- npx prisma migrate deploy",
    "prisma:studio:dev": "npx dotenv -e .env.dev -- npx prisma studio",
    "prisma:studio:prod": "npx dotenv -e .env.prod -- npx prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prettier": "prettier --write \"**/*.{ts, tsx}\"*",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "server-node-template"
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "postgress"
  ],
  "author": "Aleksandar Vrhovac",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.16.1",
    "bcrypt": "5.1.1",
    "crypto": "^1.0.1",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "jsonwebtoken": "9.0.2",
    "nodemailer": "^6.9.14",
    "prisma": "5.16.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "20.14.9",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "concurrently": "8.2.2",
    "dotenv-cli": "7.4.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "nodemon": "3.1.4",
    "prettier": "3.2.5",
    "rimraf": "5.0.7",
    "ts-node": "10.9.2",
    "typescript": "5.5.2"
  }
}
